<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalciActivity"
    android:background="#0E0E12">

    <TextView
        android:id="@+id/txtvnum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter First Number"
        android:textColor="#F6F1F1"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edtnum1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtvnum1"
        android:background="@color/white"
        android:inputType="number"></EditText>

    <TextView
        android:id="@+id/txtvnum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtnum1"
        android:text="Enter Second Number"
        android:textColor="#F6F2F2"
        android:textSize="25dp"></TextView>

    <EditText
        android:id="@+id/edtnum2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtvnum2"
        android:background="@color/white"
        android:inputType="number">

    </EditText>

    <Button
        android:id="@+id/btnadd"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edtnum2"
        android:backgroundTint="#681998"
        android:text="ADD"
        android:textSize="25dp"></Button>

    <Button
        android:id="@+id/btnclear"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edtnum2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnadd"
        android:backgroundTint="#6C1B9E"
        android:text="CLEAR"
        android:textSize="25dp"></Button>

    <EditText
        android:id="@+id/edtnum3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btnadd"
        android:background="#CDDC39"
        android:inputType="number">

    </EditText>
</RelativeLayout>