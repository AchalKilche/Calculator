<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    tools:context=".LoginForm">
    <TextView
        android:id="@+id/txv1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Login Form"
        android:textSize="25dp"
        android:textColor="@color/white">

    </TextView>

    <TextView
        android:id="@+id/txv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv1"
        android:text="Username :"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv2"
        android:layout_marginTop="20dp"
        android:text="Password :"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edt1"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/txv1"
        android:layout_toRightOf="@+id/txv2"
        android:layout_marginLeft="5dp"
        android:background="@color/white" />

    <EditText
        android:id="@+id/edt2"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/txv2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/txv3"
        android:background="@color/white" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/txv3"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0C7010"
        android:text="LOGIN"
        android:textSize="25dp"

        />

    <Button
        android:id="@+id/btncancel"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/txv3"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btnlogin"
        android:backgroundTint="#0C7010"
        android:text="CANCEL"
        android:textSize="25dp"

        />

    <TextView
        android:id="@+id/txv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnlogin"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/btnlogin"
        android:text="Forget password?"
        android:textColor="#ED0909"
        android:textSize="20dp" />


</RelativeLayout>