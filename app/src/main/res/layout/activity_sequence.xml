            android:layout_width="155dp"
            android:layout_height="150dp"
            android:text="5"
            android:id="@+id/btn5"
            android:textSize="35dp">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:text="6"
            android:id="@+id/btn6"
            android:textSize="35dp">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:text="7"
            android:id="@+id/btn7"
            android:textSize="35dp">

        </Button>
    </LinearLayout>
    </LinearLayout>
